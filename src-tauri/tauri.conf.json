{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Offload Disk Client",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Offload Disk Client",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ],
    "allowlist": {
      "http": {
        "all": true
      },
      "shell": {
        "all": false
      }
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://github.com/saybe2/offload-disk-client/releases/latest/download/latest.json"
      ]
    }
  }
}